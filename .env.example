# .env.example - Template for environment variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to the repository!

# --- Supabase Database Configuration ---
# Your Supabase Project URL (e.g., https://xxxxx.supabase.co)
SUPABASE_URL=
# Your Supabase anon key (or service role key if required by the application)
SUPABASE_KEY=

# --- Groq AI API Configuration ---
# Your Groq API key for accessing the LLM
GROQ_API_KEY=

# --- Twilio WhatsApp Business API Configuration ---
# Your Twilio Account SID
TWILIO_ACCOUNT_SID=
# Your Twilio Auth Token
TWILIO_AUTH_TOKEN=
# Your Twilio WhatsApp number (format: +1234567890)
TWILIO_WHATSAPP_NUMBER=

# --- Sentry Monitoring Configuration (Optional but recommended for production) ---
# Your Sentry DSN (Data Source Name) for error tracking
SENTRY_DSN=

# --- Application Runtime Configuration ---
# Environment type: development, staging, production
ENVIRONMENT=development
# Port number for the application (usually set by the platform like Railway)
PORT=8000

# --- Bot Behavior Configuration ---
# College name used by the Prompt Engine
COLLEGE_NAME=Your College Name
# Default language code (e.g., en, tr, ar)
DEFAULT_LANGUAGE=en
# Rate limiting: Max messages per window
RATE_LIMIT_MESSAGES=10
# Rate limiting: Time window in seconds
RATE_LIMIT_WINDOW=60
# Max length of a single message the bot will process
MAX_MESSAGE_LENGTH=1600
# Max number of conversation exchanges to keep in history context (if implemented)
MAX_CONVERSATION_HISTORY=10

# --- Dashboard Configuration ---
# Password for accessing the dashboard (if authentication is added)
DASHBOARD_PASSWORD=

# --- Database Backup Configuration (if using the backup script) ---
# Directory to store backups (relative or absolute path)
BACKUP_DIR=./backups
# Whether to compress backup files (true/false)
COMPRESS_BACKUP=true
# Whether to encrypt backup files (true/false) - Requires GPG setup
ENCRYPT_BACKUP=false
# Path to the GPG key file for encryption (if ENCRYPT_BACKUP=true)
ENCRYPTION_KEY_FILE=./backup_key.gpg

# --- Knowledge Base Configuration ---
# Directory where source documents for RAG are stored
DATA_DIR=./data
# Directory where ChromaDB vector store is persisted
CHROMA_PERSIST_DIR=./chroma_db
# Name of the ChromaDB collection
CHROMA_COLLECTION_NAME=college_knowledge_base

# --- Report Generation Configuration ---
# Directory to save generated reports
REPORT_OUTPUT_DIR=./reports
# Default number of days back for reports
DEFAULT_REPORT_DAYS=7
# Default format for reports (csv, json, html)
REPORT_FORMAT=html